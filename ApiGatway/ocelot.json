{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:7017",
    "RateLimitOptions": {
      "EnableRateLimiting": true,
      "Period": "1s",
      "Limit": 10
    }
  },
  "Routes": [
    {
      "UpstreamPathTemplate": "/gateway/auth",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/auth",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7295
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/students",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/student",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7103
        }
      ],
      "FileCacheOptions": {
        "TtlSeconds": 10
      },
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "10m",
        "Limit": 30
      },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [ "write" ]
      }
    },
    {
      "UpstreamPathTemplate": "/gateway/students/{Id}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/student/{Id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7103
        }
      ],
      "FileCacheOptions": {
        "TtlSeconds": 10
      },
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "10m",
        "Limit": 30
      },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
      },
      "RouteClaimsRequirement": {
        "Role": "User"
      }
    },
    {
      "UpstreamPathTemplate": "/gateway/products",
      "UpstreamHttpMethod": [ "get", "post" ],
      "DownstreamPathTemplate": "/api/product",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7184
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      }
    },
    {
      "UpstreamPathTemplate": "/gateway/products/{Id}",
      "UpstreamHttpMethod": [ "Get", "Put" ],
      "DownstreamPathTemplate": "/api/product/{Id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7184
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      }
    }
  ]
}
